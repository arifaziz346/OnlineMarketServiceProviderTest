<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Dashbord.fragmentDashboard">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_totalSale"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="Total Sale : 1200"
            android:textColor="@color/white"
            android:textSize="14dp"

            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <!--Graph -->
        <ir.farshid_roohi.linegraph.LineChart
            android:id="@+id/lineChart"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="vertical"
            app:chart_padding_bottom="35dp"
            app:chart_padding_left="20dp"
            app:chart_padding_right="20dp"
            app:chart_padding_top="20dp"
            app:chart_line_color="#32FFFFFF"
            app:chart_bg_color="#FF2B4A83"
            app:layout_constraintTop_toBottomOf="@id/tv_totalSale"
            />

        <!-- Order and Abandoned -->
   <TextView
       android:id="@+id/D_Order"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:layout_weight="1"
       android:layout_marginRight="5dp"
       app:layout_constraintHorizontal_bias="0.5"
       app:layout_constraintHorizontal_weight="1"
       android:text="Order"
       android:textColor="@color/white"
       android:textSize="14dp"
       android:textStyle="bold"
       android:layout_marginTop="10dp"
       android:layout_marginLeft="5dp"
       app:layout_constraintTop_toBottomOf="@id/lineChart"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toStartOf="@id/D_Abandoned"
       android:background="@color/colorPrimary"
       android:gravity="center"></TextView>

        <TextView
            android:id="@+id/tv_Order"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_AbandonedOrder"
            android:background="@color/colorPrimary"
            android:gravity="center_horizontal"
            android:text="12"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_marginRight="5dp"
            app:layout_constraintTop_toBottomOf="@id/D_Order"
            tools:layout_editor_absoluteY="45dp"></TextView>


        <TextView
            android:id="@+id/D_Abandoned"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="Abandoned"
            android:textColor="@color/white"
            android:layout_marginRight="5dp"
            android:textSize="14dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@id/D_Order"
            app:layout_constraintTop_toBottomOf="@id/lineChart"></TextView>

        <TextView
            android:id="@+id/tv_AbandonedOrder"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:background="@color/colorPrimary"
            android:gravity="center_horizontal"
            android:text="10"
            android:layout_marginRight="5dp"
            android:textColor="@color/white"
            android:textSize="14dp"

            android:textStyle="bold"
            tools:layout_editor_absoluteX="206dp"
            tools:layout_editor_absoluteY="45dp"
            app:layout_constraintTop_toBottomOf="@id/D_Abandoned"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="5dp"
            app:layout_constraintStart_toEndOf="@id/tv_Order"></TextView>

        <!-- Row Three  -->
        <TextView
            android:id="@+id/D_ProductSold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight="1"
            android:text="Product Sold"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_RevenuePerDay"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/D_Profit"
            android:background="@color/colorPrimary"
            android:gravity="center"></TextView>

        <TextView
            android:id="@+id/tv_ProductSold"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:gravity="center_horizontal"
            android:text="12"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_Profit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/D_ProductSold"
            app:layout_constraintVertical_bias="0.0"></TextView>

        <TextView
            android:id="@+id/D_Profit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Total Profit"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="14dp"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight="1"
            android:background="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@id/tv_RevenuePerDay"
            app:layout_constraintStart_toEndOf="@id/D_ProductSold"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"></TextView>

        <TextView
            android:id="@+id/tv_Profit"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:background="@color/colorPrimary"
            android:gravity="center_horizontal"
            android:text="10"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:layout_marginRight="5dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_ProductSold"
            app:layout_constraintTop_toBottomOf="@id/D_Profit"
            app:layout_constraintVertical_bias="0.0"></TextView>

        <TextView
            android:id="@+id/D_OrderPerDay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight="1"
            android:text="Order Per Day"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_Order"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/D_RevenuePerDay"
            android:background="@color/colorPrimary"
            android:gravity="center"></TextView>

        <TextView
            android:id="@+id/tv_OrderPerDay"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_RevenuePerDay"
            android:background="@color/colorPrimary"
            android:gravity="center_horizontal"
            android:text="12"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:layout_marginRight="5dp"
            app:layout_constraintTop_toBottomOf="@id/D_OrderPerDay"
            tools:layout_editor_absoluteY="45dp"></TextView>

        <TextView
            android:id="@+id/D_RevenuePerDay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Revenue Per Day"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="14dp"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight="1"
            android:background="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@id/tv_AbandonedOrder"
            app:layout_constraintStart_toEndOf="@id/D_OrderPerDay"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"></TextView>
        <TextView
            android:id="@+id/tv_RevenuePerDay"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:background="@color/colorPrimary"
            android:gravity="center_horizontal"
            android:text="10"
            android:layout_marginRight="5dp"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="206dp"
            tools:layout_editor_absoluteY="45dp"
            app:layout_constraintTop_toBottomOf="@id/D_RevenuePerDay"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="5dp"
            app:layout_constraintStart_toEndOf="@id/tv_OrderPerDay"></TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>