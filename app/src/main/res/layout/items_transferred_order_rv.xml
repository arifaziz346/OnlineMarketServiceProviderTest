        <!--            card_view:layout_editor_absoluteX="141dp"-->
        <!--            card_view:layout_editor_absoluteY="127dp"></androidx.appcompat.widget.AppCompatButton>-->

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/BtnItemsDetail"
            android:layout_width="121dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="Item Details"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/PhysicalAddress"></androidx.appcompat.widget.AppCompatButton>

        <TextView
            android:id="@+id/OrderTransferredTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Transferred Date:"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/BtnItemsDetail"
            app:layout_constraintHorizontal_bias="0.029"
            app:layout_constraintLeft_toRightOf="@id/BtnItemsDetail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/PhysicalAddress"
            app:layout_constraintVertical_bias="0.916" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>