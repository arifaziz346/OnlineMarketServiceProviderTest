<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    android:orientation="vertical"
    android:background="@color/ColorLightBlueWhite">

<!--    <androidx.appcompat.widget.AppCompatImageView-->
<!--        android:layout_width="100dp"-->
<!--        android:layout_height="90dp"-->
<!--        android:background="@drawable/om_logo"-->
<!--        android:layout_gravity="center"-->
<!--        android:layout_marginTop="70dp"-->
<!--        android:layout_marginBottom="80dp"/>-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shop Information"
        android:layout_gravity="center"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="70dp"></TextView>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtLayoutShopNameInfo"
        android:hint="Enter Your Shop Name"
        android:layout_marginBottom="6dp"/>

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtFullShopNameInfo"
        android:hint="Shop Name"
        android:inputType="text"
        android:textSize="15sp">
    </com.google.android.material.textfield.TextInputEditText>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtLayoutShopCity"
        android:hint="Enter Your Shop Address"
        android:layout_marginBottom="6dp"/>

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtShopCity"
        android:hint="City"
        android:inputType="text"
        android:textSize="15sp">
    </com.google.android.material.textfield.TextInputEditText>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtLayoutShopAddressInfo"
        android:hint="Enter Your Shop Address"
        android:layout_marginBottom="6dp"/>

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtShopAddressInfo"
        android:hint="Shop Address"
        android:inputType="text"
        android:textSize="15sp">
    </com.google.android.material.textfield.TextInputEditText>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtLayoutShopNumberInfo"
        android:hint="Enter Your Shop Phone Number"
        android:layout_marginBottom="6dp"/>

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtShopNumber"
        android:hint="Phone Number"

        android:inputType="phone"
        android:textSize="15sp">
    </com.google.android.material.textfield.TextInputEditText>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtLayoutShopTypeInfo"
        android:hint="Enter Your Shop type"
        android:layout_marginBottom="6dp"/>

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtShopType"
        android:hint="ShopType"
        android:inputType="text"
        android:textSize="15sp">
    </com.google.android.material.textfield.TextInputEditText>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnInfoSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/btn_round"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:layout_marginBottom="70dp"
        android:text="Submit">

    </androidx.appcompat.widget.AppCompatButton>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        >


    </LinearLayout>


</LinearLayout>